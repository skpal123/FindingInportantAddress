@model FindingAddress.Models.BusAssignStation


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
       
    <div class="panel panel-default">
    <div class="panel-heading" style="text-align: center">Bus Assign To Station</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-offset-2">
                <div class="form-horizontal">
      
                    <h3 style="text-align:center">@ViewBag.result</h3>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.BusId, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.BusId, ViewBag.buscompanyDropdownList as IEnumerable<SelectListItem>, "SELECT", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BusId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SourceId, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SourceId, ViewBag.busStationDropdownList as IEnumerable<SelectListItem>, "SELECT", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SourceId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DestinationId, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.DestinationId, ViewBag.busStationDropdownList as IEnumerable<SelectListItem>, "SELECT", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DestinationId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Fare, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Fare, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Fare)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Assign" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
