                                @Html.ValidationMessageFor(model => model.PersonalWebsite)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.PersonalChamber, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.PersonalChamber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PersonalChamber)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactNumber, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ContactNumber)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SerialNumber, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.SerialNumber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SerialNumber)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.HealthCareTime, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.HealthCareTime, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.HealthCareTime)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Education, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Education, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Education)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
