@model FindingAddress.Models.Doctor

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
     <div class="panel panel-success">
