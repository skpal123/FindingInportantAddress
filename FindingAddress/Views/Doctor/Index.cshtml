                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Gender, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.Gender, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Gender)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.HospitalId, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.HospitalId, ViewBag.HospitalDropdownList as IEnumerable<SelectListItem>, "SELECT", new { @class = "form-control" })
