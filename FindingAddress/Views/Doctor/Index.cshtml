                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DoctorTypeId, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.DoctorTypeId, ViewBag.DoctorTypeDopdownList as IEnumerable<SelectListItem>, "SELECT", new { @class = "form-control" })
