@model FindingAddress.Models.HospitalServiceAllocation

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>saveHospitalServiceAllocation</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        <h3 style="text-align: center; color: red">@ViewBag.result</h3>
        <div class="form-horizontal">
            <h4>HospitalServiceAllocation</h4>
            <hr />
            @Html.ValidationSummary(true)
    
            <div class="form-group">
                @Html.LabelFor(model => model.DivisionId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.DivisionId, ViewBag.DivisionList as IEnumerable<SelectListItem>, "SELECT", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DivisionId)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DistrictId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="DistrictId" class="form-control" name="DistrictId">
                        <option selected="selected">SELECT</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.DistrictId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThanaId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="ThanaId" class="form-control" name="ThanaId">
                        <option selected="selected">SELECT</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.ThanaId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HospitalId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="HospitalId" class="form-control" name="HospitalId">
                        <option selected="selected">SELECT</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.HospitalId)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.ServiceId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ServiceId, ViewBag.ServiceList as IEnumerable<SelectListItem>, "SELECT", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ServiceId)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.EstimatedPrice, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EstimatedPrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EstimatedPrice)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#DivisionId').change(function () {
                $.ajax({
                    type: 'post',
                    url: '@Url.Action("getDistrictDropdownListByDivisionId")',
                    dataType: 'json',
                    data: { DivisionId: $("#DivisionId").val() },

                    success: function (data) {
                        $("#DistrictId").empty();
                        $("#DistrictId").append('<option value="' + 0 + '">' + "SELECT" + '</option>');
                        $(data).each(function (index, item) {

                            $("#DistrictId").append('<option value="' + item.Value + '">' + item.Text + '</option>');

                        });
                    }
                });
            });
        $('#DistrictId').change(function() {
            $.ajax({
                type: 'post',
                url: '@Url.Action("getThanaDropdownListByDistrictId")',
                dataType: 'json',
                data: { DistrictId: $("#DistrictId").val() },

                success: function(data) {
                    $("#ThanaId").empty();
                    $("#ThanaId").append('<option value="' + 0 + '">' + "SELECT" + '</option>');
                    $(data).each(function(index, item) {

                        $("#ThanaId").append('<option value="' + item.Value + '">' + item.Text + '</option>');

                    });
                }
            });
        });
        $('#ThanaId').change(function() {
            $.ajax({
                type: 'post',
                url: '@Url.Action("geHospitalListByThanaId")',
                dataType: 'json',
                data: { ThanaId: $("#ThanaId").val() },

                success: function(data) {
                    $("#HospitalId").empty();
                    $("#HospitalId").append('<option value="' + 0 + '">' + "SELECT" + '</option>');
                    $(data).each(function(index, item) {

                        $("#HospitalId").append('<option value="' + item.Value + '">' + item.Text + '</option>');

                    });
                }
            });

        });
    })
    </script>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
